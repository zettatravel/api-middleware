# =========================
# Entorno de ejecución
# =========================
NODE_ENV=development          # Opciones: development | testing | production

# =========================
# Configuración general
# =========================
PORT=8080                     # Puerto en el que corre la app localmente

# =========================
# Webhooks
# =========================
WEBHOOK_KEY=your_webhook_key_here

# =========================
# API URLs
# =========================
TRAVELC_BASE_URL=https://zettatravel.com/resources
ZOHO_BASE_URL=https://www.zohoapis.com/crm

# =========================
# Credenciales Travel Compositor
# =========================
USER_TRAVELC=your_travelc_username
PASS_TRAVELC=your_travelc_password
TRAVELC_MICROSITE_ID=your_microsite_id
TRAVELC_EXTERNAL_ID=your_external_id

# =========================
# Credenciales Zoho CRM
# =========================
CLIENT_ID_ZOHO=your_zoho_client_id
CLIENT_SECRET_ZOHO=your_zoho_client_secret
REFRESH_TOKEN_ZOHO=your_zoho_refresh_token

# =========================
# Logs
# =========================
LOG_LEVEL=info                # Opciones: debug | info | warn | error
